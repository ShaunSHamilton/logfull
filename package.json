{
  "name": "logover",
  "version": "1.3.3",
  "description": "A blazingly brilliant logger for JavaScript applications",
  "main": "lib/index.js",
  "scripts": {
    "prepub": "npm run build",
    "build": "esbuild src/index.ts --bundle --minify --platform=node --target=chrome58,node14 --outdir=lib",
    "pub": "npm publish",
    "test": "esbuild test/index.ts --bundle --platform=node --target=node14 --outdir=temp-test && node temp-test/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShaunSHamilton/logover.git"
  },
  "keywords": [
    "log",
    "js",
    "nodejs",
    "node"
  ],
  "author": "Shaun Hamilton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ShaunSHamilton/logover/issues"
  },
  "homepage": "https://github.com/ShaunSHamilton/logover#readme",
  "devDependencies": {
    "esbuild": "^0.14.50"
  },
  "type": "module"
}
